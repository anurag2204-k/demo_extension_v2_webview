{
  "name": "ai-newsletter",
  "displayName": "AI Newsletter Generator",
  "description": "Generate newsletters using AI",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": ["Other"],
  "main": "./out/extension.js",
  "activationEvents": [],
  "contributes": {
    "commands": [
      {
        "command": "ai-newsletter.start",
        "title": "Start Newsletter",
        "icon": "$(play)"
      },
      {
        "command": "ai-newsletter.stop", 
        "title": "Stop Newsletter",
        "icon": "$(stop)"
      },
      {
        "command": "ai-newsletter.input",
        "title": "Provide Input",
        "icon": "$(edit)"
      }
    ],
    "views": {
      "ai-newsletter-sidebar": [
        {
          "id": "aiNewsletterSidebar",
          "name": "Newsletter Generator",
          "when": "true"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "ai-newsletter-sidebar",
          "title": "AI Newsletter",
          "icon": "$(notebook)"
        }
      ]
    }
  },
  "scripts": {
    "compile": "tsc -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "typescript": "^4.9.4"
  }
}